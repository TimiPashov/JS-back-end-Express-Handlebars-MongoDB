<main>

    <section id="details-page">

        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Name: {{post.name}}</h1>
                    <h3>Created by an author: {{user.username}}</h3>
                    <div class="card_character">

                        <p class="card-species">Species: {{post.species}}</p>
                        <p class="card-skin">Skin colour: {{post.skinColor}}</p>
                        <p class="card-eye">Eye Colour: {{post.eyeColor}}</p>
                    </div>

                    <p class="disc">Description: {{post.description}}</p>

                    <!-- If there is no registered user, do not display buttons-->
                    {{#if user}}
                    <div class="social-btn">
                        <!-- Only for registered user and author of the post -->
                        {{#if isOwner}}
                        <a href="/edit/{{post._id}}" class="edit-btn">Edit</a>
                        <a href="/edit/delete/{{post._id}}" class="del-btn">Delete</a>
                        <!-- logged in users, who have not yet voted-->
                        {{else}}
                        {{#if hasVoted}}
                        <p class="thanks-for-vote">Thanks For Voting</p>
                        {{else}}
                        <a href="/edit/vote/{{post._id}}" class="vote-up">Vote</a>
                        <!-- logged in user who has already voted-->
                        {{/if}}
                        {{/if}}
                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="card_right">
                <img src="{{post.img}}" alt="image">
            </div>
        </div>

    </section>

    <section id="votes">
        <div class="vote-info">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                        {{#if voters}}
                        <p class="PV">Total rating of votes: {{votesCount}}</p>
                        {{else}}
                        <p class="PV">Total rating of votes: 0</p>
                        {{/if}}
                    </div>
                    <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                    {{#if voters}}
                    <p class="disc">People who voted for the post - {{voters}} </p>
                    <!-- If not display: -->
                    {{else}}
                    <p class="disc">People who voted for the post - No one has voted yet.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>

</main>