<main id="edit">
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    {{#if errors}}
    <div>

        <div class="errorContainer">
            {{#each errors}}
            <p>{{this}}</p>
            {{/each}}
        </div>
    </div>
    {{/if}}
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Game Code Offer</h1>
            <form action="/edit/{{game._id}}" method="post">
                <label>Platform:</label>
                <select id="platform" name="platform">

                    <option value="">-------</option>
                    <option value="PC" {{#if (eq platform "PC" )}}selected{{/if}}>PC</option>
                    <option value="Nintendo" {{#if (eq platform "Nintendo" )}}selected{{/if}}>Nintendo</option>
                    <option value="PS4" {{#if (eq platform "PS4" )}}selected{{/if}}>PS4</option>
                    <option value="PS5" {{#if (eq platform "PS5" )}}selected{{/if}}>PS5</option>
                    <option value="XBOX" {{#if (eq platform "XBOX" )}}selected{{/if}}>XBOX</option>
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{game.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="img" value="{{game.img}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{game.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{game.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{game.description}}</textarea>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>