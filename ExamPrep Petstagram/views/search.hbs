<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" action="/search" method="get">
            <input type="text" class="search-game" name="searchName" value="{{searchName}}" placeholder="Search here...">
            <select id="platform" name="searchPlatform">
                <option value="">-------</option>
                    <option value="PC" {{#if (eq searchPlatform "PC" )}}selected{{/if}}>PC</option>
                    <option value="Nintendo" {{#if (eq searchPlatform "Nintendo" )}}selected{{/if}}>Nintendo</option>
                    <option value="PS4" {{#if (eq searchPlatform "PS4" )}}selected{{/if}}>PS4</option>
                    <option value="PS5" {{#if (eq searchPlatform "PS5" )}}selected{{/if}}>PS5</option>
                    <option value="XBOX" {{#if (eq searchPlatform "XBOX" )}}selected{{/if}}>XBOX</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        <div class="search-result">
            <div class="search-list">
                {{#if games}}
                {{#each games}}
                {{>gameCard}}
                {{/each}}
                {{else}}
                <div class="no-match">
                    <p>No match was found!</p>
                </div>
                {{/if}}
            </div>
        </div>

    </section>
</main>